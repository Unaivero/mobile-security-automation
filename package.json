{
  "name": "mobile-security-automation",
  "version": "1.0.0",
  "description": "Mobile app integrity and security threat detection testing framework",
  "main": "index.js",
  "scripts": {
    "test": "wdio run wdio.conf.js",
    "test:security": "wdio run wdio.conf.js --suite security",
    "test:integration": "wdio run wdio.conf.js --suite integration",
    "test:emulator-detection": "wdio run wdio.conf.js --spec tests/security/emulator-detection.test.js",
    "test:root-detection": "wdio run wdio.conf.js --spec tests/security/root-detection.test.js",
    "test:file-tampering": "wdio run wdio.conf.js --spec tests/security/file-tampering.test.js",
    "test:environment-analysis": "wdio run wdio.conf.js --spec tests/security/environment-analysis.test.js",
    "setup": "node scripts/setup.js",
    "device:list": "node scripts/device-manager.js list",
    "device:connect": "node scripts/device-manager.js connect",
    "device:setup": "node scripts/device-manager.js setup-device",
    "device:security-check": "node scripts/device-manager.js security-check",
    "report:generate": "node scripts/report-generator.js generate",
    "report:summary": "node scripts/report-generator.js summary",
    "report:cleanup": "node scripts/report-generator.js cleanup",
    "lint": "eslint src/ tests/ scripts/ --fix",
    "format": "prettier --write src/ tests/ scripts/",
    "validate": "npm run lint && npm run format",
    "ci:setup": "npm ci && node scripts/setup.js",
    "ci:test": "npm run test:security && npm run test:integration",
    "clean": "rm -rf reports/* logs/* screenshots/*"
  },
  "keywords": [
    "mobile",
    "security",
    "automation",
    "testing",
    "appium",
    "android",
    "fintech",
    "betting",
    "integrity",
    "threat-detection"
  ],
  "author": "Jose Vergara",
  "license": "MIT",
  "dependencies": {
    "@wdio/cli": "^8.15.0",
    "@wdio/local-runner": "^8.15.0",
    "@wdio/mocha-framework": "^8.15.0",
    "@wdio/spec-reporter": "^8.15.0",
    "@wdio/appium-service": "^8.15.0",
    "appium": "^2.0.0",
    "appium-uiautomator2-driver": "^2.30.0",
    "webdriverio": "^8.15.0",
    "chai": "^4.3.8",
    "mocha": "^10.2.0",
    "fs-extra": "^11.1.1",
    "crypto": "^1.0.1",
    "path": "^0.12.7",
    "chalk": "^4.1.2",
    "shelljs": "^0.8.5",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-mocha": "^10.1.0",
    "prettier": "^3.0.3",
    "jsdoc": "^4.0.2",
    "@types/node": "^20.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "android": {
      "minSdkVersion": 21,
      "targetSdkVersion": 33,
      "compileSdkVersion": 33
    },
    "security": {
      "owaspMasvs": "1.4.2",
      "riskThreshold": "medium",
      "reportFormat": "html"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Unaivero/mobile-security-automation.git"
  },
  "bugs": {
    "url": "https://github.com/Unaivero/mobile-security-automation/issues"
  },
  "homepage": "https://github.com/Unaivero/mobile-security-automation#readme"
}
